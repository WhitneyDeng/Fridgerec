<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/inventoryFragment"
        android:name="com.example.fridgerec.activities.fragments.InventoryFragment"
        android:label="Inventory List"
        tools:layout="@layout/fragment_inventory" >
        <action
            android:id="@+id/action_inventoryFragment_to_inventoryCreationFragment"
            app:destination="@id/inventoryCreationFragment" />
        <action
            android:id="@+id/action_inventoryFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.fridgerec.activities.fragments.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/shoppingFragment"
        android:name="com.example.fridgerec.activities.fragments.ShoppingFragment"
        android:label="Shopping List"
        tools:layout="@layout/fragment_shopping" >
        <action
            android:id="@+id/action_shoppingFragment_to_shoppingCreationFragment"
            app:destination="@id/shoppingCreationFragment" />
    </fragment>
    <fragment
        android:id="@+id/inventoryCreationFragment"
        android:name="com.example.fridgerec.activities.fragments.InventoryCreationFragment"
        android:label="Create New Inventory Item"
        tools:layout="@layout/fragment_inventory_creation" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.fridgerec.activities.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_inventoryFragment"
            app:destination="@id/inventoryFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/shoppingCreationFragment"
        android:name="com.example.fridgerec.activities.fragments.ShoppingCreationFragment"
        android:label="fragment_shopping_creation"
        tools:layout="@layout/fragment_shopping_creation" />
</navigation>