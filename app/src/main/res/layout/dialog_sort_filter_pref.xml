<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/menu_save">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sort by:"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSortFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="food name" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSortFoodGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="food group" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSortSourceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="source date" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSortExpireDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="expire date" />
        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter by:" />

        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilterExpireDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="expire date" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilterSourceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="source date" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilterFoodGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="food group" />
        </com.google.android.material.chip.ChipGroup>

        <LinearLayout
            android:id="@+id/llExpireBefore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="expire before" />

            <Button
                android:id="@+id/btnExpireBefore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFilterExpireAfter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="expire after" />

            <Button
                android:id="@+id/btnExpireAfter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFilterSourcedBefore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="sourced before" />

            <Button
                android:id="@+id/btnSourcedBefore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFilterSourcedAfter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="sourced after" />

            <Button
                android:id="@+id/btnSourcedAfter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFilterFoodGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="food group" />

            <Spinner
                android:id="@+id/spFoodGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>